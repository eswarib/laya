{
  "sandboxRoot": "~",
  "auditLogPath": ".mcp-audit/terminal-server.jsonl",
  "allowedCommands": [
    "ls",
    "pwd",
    "whoami",
    "git",
    "npm",
    "node",
    "python3",
    "rg",
    "cat",
    "mkdir",
    "ln",
    "date",
    "grep",
    "egrep",
    "find"
  ],
  "blockedArgsRegex": [
    "--no-preserve-root",
    "^-rf$",
    "^-fr$",
    "^--force$"
  ],
  "dangerousCommands": [
    "rm",
    "dd",
    "mkfs",
    "shutdown",
    "reboot",
    "poweroff"
  ],
  "dangerousPatterns": [
    { "command": "git", "argsAnyOf": ["clean"], "argsRegexAnyOf": ["^-fdx$", "^-xdf$", "^--force$"] },
    { "command": "git", "argsAnyOf": ["reset"], "argsRegexAnyOf": ["^--hard$"] },
    { "command": "ln", "argsAnyOf": ["-f", "--force"] }
  ],
  "confirmTtlSeconds": 90,
  "maxOutputChars": 20000,
  "maxFileReadBytes": 200000
}


